local Library = loadstring(game:HttpGetAsync("https://github.com/ActualMasterOogway/Fluent-Renewed/releases/latest/download/Fluent.luau"))()
local SaveManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/SaveManager.luau"))()
local InterfaceManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/InterfaceManager.luau"))()

local Window = Library:CreateWindow({
    Title = "Godlikes Performance Enhancer",
    SubTitle = "By Godlike",
    TabWidth = 125,
    Size = UDim2.fromOffset(830, 525),
    Resize = true,
    MinSize = Vector2.new(470, 380),
    Acrylic = true,
    Theme = "Darker",
    MinimizeKey = Enum.KeyCode.RightControl
})

Library:Notify({
    Title = "Welcome",
    Content = "Hope you enjoy!!!",
    SubContent = "Made by Godlike",
    Duration = 5
})

Library:Notify({
    Title = "Join the Discord",
    SubContent = "Link in Credits Tab",
    Duration = 8
})

local Tabs = {
    Performance = Window:AddTab({ Title = "Performance", Icon = "file" }),
    Enhancer = Window:AddTab({ Title = "Enhancer", Icon = "badge-alert" }),
    ServerStats = Window:AddTab({ Title = "Server Stats", Icon = "database" }),
    Personalize = Window:AddTab({ Title = "Personalize", Icon = "door-closed-locked" }),
    GoodFriends = Window:AddTab({ Title = "Good Friends", Icon = "handshake" }),
    Backtomenu = Window:AddTab({ Title = "Back To Menu", Icon = "house" }),
    Credits = Window:AddTab({ Title = "Credits", Icon = "type" }),
}

Tabs.Performance:AddButton({
    Title = "Remove Shadows",
    Callback = function()
        game:GetService("Lighting").GlobalShadows = false
    end
})

Tabs.Performance:AddButton({
    Title = "Disable Bloom",
    Callback = function()
        local bloom = game:GetService("Lighting"):FindFirstChildOfClass("BloomEffect")
        if bloom then
            bloom.Enabled = false
        end
    end
})

Tabs.Performance:AddButton({
    Title = "Disable SunRaysEffect",
    Callback = function()
        local sunRays = game:GetService("Lighting"):FindFirstChildOfClass("SunRaysEffect")
        if sunRays then
            sunRays.Enabled = false
        end
    end
})

local GraphicTypes = {
    GraphicSolidModels = "Destroy GraphicSolidModels",
    GraphicsHSR = "Destroy GraphicsHSR",
    GraphicsMeshParts = "Destroy GraphicsMeshParts",
    GraphicsParticles = "Destroy GraphicsParticles",
    GraphicsParts = "Destroy GraphicsParts",
    GraphicsSpatialHash = "Destroy GraphicsSpatialHash",
    GraphicsTerrain = "Destroy GraphicsTerrain",
    GraphicsTexture = "Destroy GraphicsTexture",
    GraphicsTextureCharacter = "Destroy GraphicsTextureCharacter",
    GraphicsSlimModels = "Destroy GraphicsSlimModels"
}

for GraphicName, ButtonTitle in pairs(GraphicTypes) do
    Tabs.Performance:AddButton({
        Title = ButtonTitle,
        Callback = function()
            local success, result = pcall(function()
                game:GetService("StarterGui"):SetCore("Graphics" .. GraphicName, false)
            end)
            if not success then
                warn("Failed to disable " .. GraphicName .. ": " .. result)
            end
        end
    })
end
